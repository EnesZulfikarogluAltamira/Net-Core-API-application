{
  "Routes": [
    {
      "UseServiceDiscovery": true,
      "ServiceName": "Condolife",

      "UpstreamPathTemplate": "/{str}",
      "UpstreamHttpMethod": [ "Get", "Post" ],

      "DownstreamPathTemplate": "/{str}",
      "DownstreamScheme": "http",
      
      "Priority": 1
    }
  ],

  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8000",
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": 8500,
      "Type": "Consul"
    }
  }
}